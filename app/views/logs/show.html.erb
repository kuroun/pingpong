<%- model_class = Log -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:player_one) %>:</strong></dt>
  <dd><%= @log.player_one %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player_two) %>:</strong></dt>
  <dd><%= @log.player_two %></dd>
  <dt><strong><%= model_class.human_attribute_name(:played_date) %>:</strong></dt>
  <dd><%= @log.played_date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player_one_score) %>:</strong></dt>
  <dd><%= @log.player_one_score %></dd>
  <dt><strong><%= model_class.human_attribute_name(:player_two_score) %>:</strong></dt>
  <dd><%= @log.player_two_score %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              logs_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_log_path(@log), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              log_path(@log),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
